<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Solvix.Client.MVVM.Controls.NeonButton">

    <Grid>
        <!-- Glow Effect -->
        <Border x:Name="GlowEffect"
                BackgroundColor="{Binding GlowColor, Source={Reference this}}"
                Opacity="0"
                Margin="-5"
                StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="28"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="{Binding GlowColor, Source={Reference this}}" 
                        Offset="0,0" 
                        Radius="20" 
                        Opacity="0.8"/>
            </Border.Shadow>
        </Border>

        <!-- Main Button -->
        <Border x:Name="MainButton"
                BackgroundColor="{Binding BackgroundColor, Source={Reference this}}"
                Padding="{Binding Padding, Source={Reference this}}"
                StrokeThickness="2"
                Stroke="{Binding BorderColor, Source={Reference this}}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="28"/>
            </Border.StrokeShape>
            <Label x:Name="ButtonLabel"
                   Text="{Binding Text, Source={Reference this}}"
                   TextColor="{Binding TextColor, Source={Reference this}}"
                   FontSize="{Binding FontSize, Source={Reference this}}"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Border>

        <Grid.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnTapped"/>
        </Grid.GestureRecognizers>
    </Grid>
</ContentView>