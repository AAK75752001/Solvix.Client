<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- App Theme Colors -->
    <Color x:Key="PrimaryColor">#512BD4</Color>
    <Color x:Key="SecondaryColor">#DFD8F7</Color>
    <Color x:Key="TertiaryColor">#2B0B98</Color>
    <Color x:Key="AccentColor">#4F3DD5</Color>

    <!-- Page and Controls -->
    <Color x:Key="PageBackgroundColor">#F3F3F3</Color>
    <Color x:Key="CardBackgroundColor">White</Color>
    <Color x:Key="FrameBorderColor">#DDDDDD</Color>

    <!-- Text Colors -->
    <Color x:Key="PrimaryTextColor">#222222</Color>
    <Color x:Key="SecondaryTextColor">#666666</Color>
    <Color x:Key="TertiaryTextColor">#999999</Color>
    <Color x:Key="InverseTextColor">White</Color>

    <!-- Other UI Elements -->
    <Color x:Key="SeparatorColor">#EEEEEE</Color>
    <Color x:Key="ShadowColor">#88000000</Color>
    <Color x:Key="SuccessColor">#34C759</Color>
    <Color x:Key="ErrorColor">#FF3B30</Color>
    <Color x:Key="WarningColor">#FF9500</Color>
    <Color x:Key="InfoColor">#007AFF</Color>

    <!-- Message Bubbles -->
    <Color x:Key="SentMessageBubbleColor">#DCF8C6</Color>
    <Color x:Key="ReceivedMessageBubbleColor">White</Color>
    <Color x:Key="SentMessageTextColor">#222222</Color>
    <Color x:Key="ReceivedMessageTextColor">#222222</Color>
</ResourceDictionary>