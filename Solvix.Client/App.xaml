<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Solvix.Client"
             x:Class="Solvix.Client.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Themes/LightTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- App-wide converters -->
            <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <local:InverseBoolConverter x:Key="InverseBoolConverter" />
            <local:StringToBoolConverter x:Key="StringToBoolConverter" />
            <local:DateTimeToFormattedStringConverter x:Key="DateTimeToFormattedStringConverter" />
            <local:MessageStatusToIconConverter x:Key="MessageStatusToIconConverter" />
            <local:IsOwnMessageToAlignmentConverter x:Key="IsOwnMessageToAlignmentConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>